<h1>Editing Book</h1>

<%= form_with model: @book do |f| %>

  <div class= "text">
    <p>Title</p>
    <%= f.text_field :title %>
  </div>

  <div class= "text">
    <p>Body</p>
    <%= f.text_area :body %>
  </div>

  <div class= "action">
    <%= f.submit 'Update Book' %>
  </div>

  <main>
    <% flash.each do |message_type, message| %>
      <div class="flash-message <%= message_type %>"><%= message %></div>
    <% end %>
  </main>

<% end %>

<%= link_to "Show", book_path %> |
<%= link_to "Back", '/books' %>