<h1>Books</h1>

<% @books.each do |book| %>


  <strong>Title</strong>
  <span><%= book.title %></span>


  <strong>Body</strong>
  <span><%= book.body %></span>



  <span><%= link_to "Show", book_path(book.id) %></span>

  <span><%= link_to "Edit", edit_book_path(book.id) %></span>

  <span><%= link_to "Destroy", book_path(book.id) %></span>

  <br>

<% end %>





