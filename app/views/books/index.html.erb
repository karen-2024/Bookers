<h1>Books</h1>

  <table>

    <thead>
      <tr>
        <th><strong>Title</strong></th>
        <th><strong>Body</strong></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "Show", book_path(book.id) %></td>
        <td><%= link_to "Edit", edit_book_path(book.id) %></td>
        <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data_confirm" => "Are you sure?" %></td>
        </td>
      </tr>
      <% end %>
    </tbody>

  </table>


<h3>New book</h3>
<%= form_with model: @book, url: '/books', local:true do |f| %>

  <p>Title</p>
  <%= f.text_field :title %>

  <p>Body</p>
  <%= f.text_area :body %>

  <br>
  <%= f.submit 'Create Book' %>

<% end %>

