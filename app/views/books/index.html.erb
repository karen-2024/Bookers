
<h1>Books</h1>

  <div class= "index">
    <table>
      <thead>
        <tr>
          <th><strong>Title</strong></th>
          <th><strong>Body</strong></th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td><%= link_to "Show", book_path(book.id) %></td>
          <td><%= link_to "Edit", edit_book_path(book.id) %></td>
          <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data_confirm" => "Are you sure?" %></td>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <h2>New book</h2>
  <%= form_with model: @book, url: '/books', local:true do |f| %>

    <div class= "text">
      <p>Title</p>
      <%= f.text_field :title %>
    </div>

    <div class= "text">
      <p>Body</p>
      <%= f.text_area :body %>
    </div>

    <div class= "action">
      <%= f.submit 'Create Book' %>
    </div>

  <% end %>